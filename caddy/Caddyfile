{
    log default {
        output stdout
        format console
        level INFO
    }

    order rate_limit before basicauth
}

{$DOMAIN_NAME} {
    encode gzip zstd

    reverse_proxy fastapi:8000

    header {
        -Server
    }

    rate_limit {
        zone default {
            key {remote_host}
            events 20
            window 1m
        }
    }

    handle_errors 429 {
        header {
            -Server
        }
        respond ""
    }
}