{
    email {$EMAIL}

    local_certs
    debug

    log default {
        output stdout
        format console
        level DEBUG
    }

    order rate_limit before basicauth
}

{$DOMAIN_NAME} {
    tls internal {
        on_demand
    }

    header {
        -Server
    }

    route /metrics* {
        @external_network {
            not {
                remote_ip 10.0.0.0/24
            }
        }
        handle @external_network {
            rewrite * /404.html
            reverse_proxy fastapi:8000
        }
        reverse_proxy fastapi:8000
    }

    reverse_proxy fastapi:8000 {
        header_up X-Request-ID {http.request.uuid}
        header_up X-Forwarded-Proto {scheme}
    }

    rate_limit {
        zone default {
            key {remote_host}
            events 50
            window 1m
        }
    }

    handle_errors 429 {
        header {
            -Server
        }
        respond ""
    }
}

grafana.{$DOMAIN_NAME} {
    tls internal {
        on_demand
    }

    reverse_proxy grafana:3000
}