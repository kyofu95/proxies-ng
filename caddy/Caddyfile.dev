{
    email {$EMAIL}

    local_certs
    debug

    log default {
        output stdout
        format console
        level DEBUG
    }

    order rate_limit before basicauth
}

https://{$DOMAIN_NAME} {
    tls internal {
        on_demand
    }

    header {
        -Server
    }

    reverse_proxy fastapi:8000 {
        header_up X-Request-ID {http.request.uuid}
        header_up X-Forwarded-Proto {scheme}
    }

    rate_limit {
        zone default {
            key {remote_host}
            events 25
            window 1m
        }
    }

    handle_errors 429 {
        header {
            -Server
        }
        respond ""
    }
}