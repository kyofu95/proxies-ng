{
    local_certs
    debug

    log default {
        output stdout
        format console
        level DEBUG
    }

    order rate_limit before basicauth
}

{$DOMAIN_NAME} {
    reverse_proxy fastapi:8000

    tls internal {
        on_demand
    }

    rate_limit {
        zone default {
            key {remote_host}
            events 20
            window 1m
        }
    }
}