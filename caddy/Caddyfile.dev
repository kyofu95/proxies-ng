{
    email {$EMAIL}

    local_certs
    debug

    log default {
        output stdout
        format console
        level DEBUG
    }

    order rate_limit before basicauth
}

{$DOMAIN_NAME} {
    reverse_proxy fastapi:8000

    tls internal {
        on_demand
    }

    header {
        -Server
    }

    rate_limit {
        zone default {
            key {remote_host}
            events 2
            window 1m
        }
    }

    handle_errors 429 {
        header {
            -Server
        }
        respond ""
    }
}